{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MkdirBuild",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "CMakeGen",
            "dependsOn": [
                "MkdirBuild"
            ],
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "'Unix Makefiles'",
                "-DCMAKE_BUILD_TYPE=DEBUG",
                "${workspaceRoot}"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "dependsOn": [
                "CMakeGen"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "--target",
                "all",
                "--",
                "-j",
                "8"
            ],
            "command": "cmake",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run",
            "dependsOn": [
                "Build"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/bin"
            },
            "command": "./astar"
        },
        {
            "label": "Test",
            "dependsOn": [
                "Build"
            ],
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "ctest",
            "args": [
                "-V"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        }
    ]
}